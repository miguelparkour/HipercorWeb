
@{
    ViewData["Title"] = "Carrito";
}
@model Pedido

<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<div class="container">
    <div class="card mt-1">
        <div class="card-header bg-dark text-light">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Carrito de la compra
            <a asp-action="Productos" asp-controller="Tienda" class="btn btn-outline-info btn-sm pull-right">Continuar comprando</a>
            <div class="clearfix"></div>
        </div>
        <div class="card-body">

            @foreach (Producto item in Model.ListaProductos)
            {
                <!-- PRODUCT -->
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-2 text-center">
                        <img class="img-responsive" src="@item.Img" alt="prewiew" width="120">
                    </div>
                    <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                        <h4 class="product-name"><strong>@item.Nombre</strong></h4>
                        <h4>
                            <small>@item.Descripcion</small>
                        </h4>
                    </div>
                    <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                        <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                            <h6><strong>@item.Precio€ <span class="text-muted">x</span><span>@item.Cantidad</span></strong></h6>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6 text-right">
                            <a asp-action="AddProducto" asp-route-id="@item.Id" class="btn btn-outline-primary btn-xs">+</a>
                            <a asp-action="DisProducto" asp-route-id="@item.Id" class="btn btn-outline-primary btn-xs">-</a>
                            <a asp-action="DelProducto" asp-route-id="@item.Id" class="btn btn-outline-danger btn-xs">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- END PRODUCT -->
            }

        </div>
        <div class="card-footer">
            <div class="coupon col-md-5 col-sm-5 no-padding-left pull-left">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="cupone code">
                    </div>
                    <div class="col-6">
                        <input type="submit" class="btn btn-default" value="Use cupone">
                    </div>
                </div>
            </div>
            <div class="pull-right" style="margin: 10px">
                <a asp-action="EscogerDireccion" class="btn btn-success pull-right">Comprar</a>
                <div class="pull-right" style="margin: 5px">
                    Precio total(IVA incluido): <b>@Model.GetPrecioTotal()€</b>
                </div>
            </div>
        </div>
    </div>
</div>