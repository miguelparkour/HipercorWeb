
@{
    ViewData["Title"] = "Editar Password";
}
@model Cliente
<h1>EditarPassword</h1>

<div class="card mx-auto" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Accede a tu cuenta</h5>
        <form asp-action="EditarPassword">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="@Model.Password" for="Password">Contraseña</label>
                    <input asp-for="@Model.Password" id="Password" type="password" class="form-control" placeholder="Contraseña">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword" for="ConfirmPassword">Repetir la Contraseña</label>
                    <input asp-for="@Model.ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar la contraseña">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Enviar Recuperar Contraseña</button>
        </form>
    </div>
</div>
